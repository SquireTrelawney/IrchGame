<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon1_100"
    android:gravity="bottom"
    android:rotation="0"
    android:scaleX="1"
    android:scaleY="1"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button6"
        android:layout_width="417dp"
        android:layout_height="95dp"
        android:layout_margin="20dp"
        android:background="@drawable/b1_8"
        android:fontFamily="serif"
        android:includeFontPadding="true"
        android:onClick="open_map"
        android:text="@string/история"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#C50BE4"

        android:textColorHighlight="#2EE619"
        android:textDirection="ltr"
        android:textIsSelectable="true"

        android:textScaleX="1"
        android:textSize="40sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/button7"
        android:layout_width="217dp"
        android:layout_height="82dp"
        android:background="@drawable/budda_8"
        android:onClick="open_puzzles" />

</LinearLayout>
