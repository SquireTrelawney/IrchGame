<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/puzzles_background"
    android:orientation="horizontal"
    tools:context=".Puzzles">

    <Button
        android:id="@+id/btn_piramyde"
        android:layout_width="223dp"
        android:layout_height="223dp"
        android:layout_marginStart="556dp"
        android:layout_marginTop="116dp"
        android:background="#00FFFFFF"
        android:onClick="open_shadows"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_store"
        android:layout_width="216dp"
        android:layout_height="223dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="116dp"
        android:background="#00FFFFFF"
        android:onClick="open_store_puzzle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_iceCream"
        android:layout_width="223dp"
        android:layout_height="223dp"
        android:layout_marginStart="306dp"
        android:layout_marginTop="116dp"
        android:background="#00FFFFFF"
        android:onClick="open_separation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>